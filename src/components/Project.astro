---
const { title, description, image, technologies, url } = Astro.props;
import ExternalLinkIcon from '../icons/ExternalLink.astro';
---

<article class="project container">
    <a  href={url} target="_blank">
        <span>
            <ExternalLinkIcon />
            {
                url.replace(/https?:\/\//, '')
                    .replace(/\/$/, '')
                    .replace(/www\./, '')
                    .slice(0, 12)
                    .concat(url.length > 12 ? '...' : '')
            }
        </span>
    <div class="image">
        <div class="overlay"></div>
        <img src={image} alt={title} />
    </div>
    </a>
    <div>
        <h3>{title}</h3>
        <p>{description}</p>
        <ul>
            {technologies.map(tech => <li>{tech}</li>)}
        </ul>
    </div>
</article>

<style>
    .project {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 21rem;
        padding: 0 !important;
        overflow: hidden;
        position: relative;
    }
    span {
        position: absolute;
        text-decoration: none;
        top: 0;
        right: 0;
        background-color: var(--background);
        padding: 0.5rem;
        border-radius: 0 0 0 0.5rem;
        z-index: 2;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
    }
    a {
        color: inherit;
    }
    a:visited {
        color: inherit;
    }
    a:hover .overlay {
        opacity: 0;
    }
    a:hover img {
        transform: scale(1.1);
    }
    a:hover span {
        background-color: var(--text);
        color: var(--background);
    }
    .image {
        position: relative;
        overflow: hidden;
        padding: 0 !important;
    }
    .overlay {
        transition: opacity 0.2s ease-in-out;
        position: absolute;
        width: 100%;
        height: 100%;
        background-color: var(--buttons----secondary);
        top: 0;
        left: 0;
        z-index: 1;
        opacity: 0.8;
        mix-blend-mode: multiply;
    }
    img {
        width: 100%;
        height: auto;
        transition: transform 0.2s ease-in-out;
    }
    h3 {
        font-family: var(--heading);
        color: var(--accent);
    }
    ul {
        display: flex;
        flex-wrap: wrap;
        list-style: none;
        padding: 0;
        gap: 0.5rem;
        font-size: var(--small);
    }
    li::after {
        content: 'â€¢';
        margin-left: 0.5rem;
    }
    li:last-child::after {
        content: '';
    }
    .project > div {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
    }
</style>
