<form id="contact">
    <span class="form-title">Get in touch with me!</span>
    <div class="form-group">
        <input type="text" name="firstname" placeholder="First Name">
        <input type="text" name="lastname" placeholder="Last Name">
    </div>
    <input type="text" name="email" placeholder="E-Mail">
    <textarea name="message" placeholder="Message"></textarea>
    <button type="submit">Send</button>
    <div class="socials">
        <span>Or find me on:</span>
        <div class="socials-group">
            <a class="icon" href="https://github.com/xanderazuaje" target="_blank">
                <img src="icons/github.svg" alt="Github">
            </a>
            <a class="icon" href="https://www.linkedin.com/in/xanderazuaje/" target="_blank">
                <img src="icons/linkedin.svg" alt="LinkedIn">
            </a>
            <a class="icon" href="https://twitter.com/xanderazuaje" target="_blank">
                <img src="icons/x.svg" alt="X">
            </a>
        </div>
    </div>
</form>

<style>
